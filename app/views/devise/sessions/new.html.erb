<section id="about">
  <div class="title text-center">
    <h1 style="margin-bottom:50px">원활한 진행을 위해 로그인을 해주세요!</h1>
    <% if user_signed_in? %>
      <%= image_tag(current_user.image, size: '40x40', style:'border-radius:3px;margin-top:5px;') if current_user.image %>
      <%= link_to "로그아웃", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure?" }%>
    <% else %>
      <%= link_to "페이스북으로 로그인", user_facebook_omniauth_authorize_path %>
    <% end %>
  </div>
</section>

