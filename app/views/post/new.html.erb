<section id="about">
  <div class="container">
    <%= form_tag "/post/create",multipart: true, method: "post" do %>
      <div class="form-group">
        <label>프로젝트 이름</label>
        <input name="title" type="text" class="form-control" placeholder="재밌는 이름을 지어주세요">
      </div>
      <div class="form-group">
        <label>프로젝트 목적</label>
        <input name="purpose" type="text" class="form-control" placeholder="(ex)스터디, 놀이, 취미, 기타 등등">
      </div>
      <div class="form-group">
        <label>최대 인원</label>
        <select class="form-control" name="people">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        </select>
      </div>
      <div class="form-group">
        <label>모집 기간</label>
        <select class="form-control" name="dday">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
          <option>13</option>
          <option>14</option>
        </select>
      </div>
      <div class="form-group">
        <label>모임 설명</label>
        <textarea name="content" class="form-control" rows="7"></textarea>
      </div>

      <div class="text-center">
      <button style="margin-bottom: 30px; margin-top: 20px;" class="btn btn-default">작성하기</button>
      </div>
    <% end %>
  </div>
  <script>
  function setgu(x){
         var gu_text=$("#gu-text").val();
          if(gu_text)
           $("#gu-text").val(gu_text+","+x);
          else
          $("#gu-text").val(x);
        }
  </script>
</section>